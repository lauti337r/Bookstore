{% extends 'base.html.twig' %}



{% block title %}{{ book.title }} from {{ book.author }} {% endblock %}

{% block body %}
    <div class="row mt-4 mb-4">
        <div class="col-sm-8">
            <h2><b>{{ book.title }}</b>   Rating: {{ book.rating }} ({{ book.votes }} votes)
                <a id="addBook" href=""><i class="fa fa-cart-plus" aria-hidden="true"></i></a>
            </h2>
            <h3><i><a href="{{ path('author_show',{authorId:book.author.id}) }}">{{ book.author }}</a></i></h3>
            {% for genre in book.genres %}
                {% if not loop.last %}
                {{ genre.name }},
                {% else %}
                {{ genre.name }}.
                {% endif %}
            {% endfor %}
            <br>
            {{ book.description }}
            {{ dump(book) }}

        </div>
        <div class="col-sm-4">
            <img src="{{ book.cover }}" width="100%">
        </div>
    </div>
    <script type="text/javascript">
    {% block jsCustom %}


            $('#addBook').click(function(e){
                e.preventDefault();
                alert("Book to add");



            });
    {% endblock jsCustom %}
    </script>

{% endblock body %}